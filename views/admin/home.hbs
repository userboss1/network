<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - JDT ToolHub</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            background: linear-gradient(135deg, #e3f2fd, #bbdefb);
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        header {
            background: linear-gradient(135deg, #0066cc, #004d99);
            color: white;
            text-align: center;
            padding: 20px;
            font-size: 26px;
            font-weight: bold;
            width: 100%;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }

        .btn {
            padding: 12px 20px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            text-decoration: none;
            color: white;
            background: #007bff;
            transition: 0.3s;
            display: inline-block;
            text-align: center;
            margin: 20px 0;
            box-shadow: 2px 4px 8px rgba(0, 0, 0, 0.2);
        }

        .btn:hover {
            background: #0056b3;
        }

        .container {
            width: 90%;
            max-width: 900px;
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

        .item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            margin-bottom: 12px;
            background: #f9f9f9;
            border-radius: 8px;
            flex-wrap: wrap;
            border-left: 5px solid #007bff;
            box-shadow: 2px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .actions {
            display: flex;
            gap: 10px;
        }

        .actions a, .actions button {
            padding: 10px 16px;
            font-size: 14px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
            text-align: center;
            border: none;
            cursor: pointer;
            transition: 0.3s;
        }

        .toggle { background: #ffc107; color: black; }
        .delete { background: #dc3545; color: white; }
        .results { background: #28a745; color: white; }
        .assign { background: #17a2b8; color: white; }

        .toggle:hover { background: #e0a800; }
        .delete:hover { background: #c82333; }
        .results:hover { background: #218838; }
        .assign:hover { background: #138496; }

        @media (max-width: 600px) {
            .item {
                flex-direction: column;
                align-items: flex-start;
            }
            .actions {
                margin-top: 10px;
                flex-direction: column;
                width: 100%;
            }
            .actions a, .actions button {
                width: 100%;
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <header>JDT ToolHub - Admin Dashboard</header>

    <a href="/Admin/viva" class="btn">Create Viva</a>

    <div class="container">
        <h2>Viva List</h2>
        <div class="item">
            <div>
                <p><strong>Viva Name:</strong> {{viva.viva_name}}</p>
                <p><strong>Viva Password:</strong> {{viva.viva_password}}</p>
            </div>
            <div class="actions">
                <button class="toggle" onclick="toggleViva(this, 1)">Start</button>
                <a href="/Admin/delete-viva/1" class="delete">Delete</a>
                <a href="/Admin/asign" class="assign">Assign</a> <!-- New Assign Button -->
                <a href="/Admin/results" class="results">Check Results</a>
            </div>
        </div>
    </div>

    <script>
        function toggleViva(button, vivaId) {
            let isActive = button.textContent === "Stop";
            fetch(`/Admin/toggle-viva/${vivaId}`, {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ active: !isActive })
            })
            .then(res => res.json())
            .then(data => {
                button.textContent = data.active ? "Stop" : "Start";
                button.style.background = data.active ? "#dc3545" : "#ffc107";
                button.style.color = data.active ? "white" : "black";
            })
            .catch(err => console.error("Error toggling Viva:", err));
        }
    </script>
</body>
</html>
