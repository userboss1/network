                </div>
                <div class="option">
                    <input type="text" name="options[2][]" required placeholder="Option 4">
                    <input type="radio" name="correct_answer[2]" value="3">
                </div>
            </div>

            <!-- Question 4 -->
            <div class="question-block">
                <h3>Question 4</h3>
