                    <input type="radio" name="correct_answer[1]" value="1">
                </div>
                <div class="option">
                    <input type="text" name="options[1][]" required placeholder="Option 3">
                    <input type="radio" name="correct_answer[1]" value="2">
                </div>
                <div class="option">
                    <input type="text" name="options[1][]" required placeholder="Option 4">
                    <input type="radio" name="correct_answer[1]" value="3">
                </div>
            </div>

            <!-- Question 3 -->
            <div class="question-block">
                <h3>Question 3</h3>
                <input type="text" name="questions[]" placeholder="Enter your question" required>
                <h4>Options:</h4>
                <div class="option">
                    <input type="text" name="options[2][]" required placeholder="Option 1">
                    <input type="radio" name="correct_answer[2]" value="0" required>
