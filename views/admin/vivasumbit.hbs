                    <input type="text" name="options[4][]" required placeholder="Option 1">
                    <input type="radio" name="correct_answer[4]" value="0" required>
                </div>
                <div class="option">
                    <input type="text" name="options[4][]" required placeholder="Option 2">
                    <input type="radio" name="correct_answer[4]" value="1">
                </div>
                <div class="option">
                    <input type="text" name="options[4][]" required placeholder="Option 3">
                    <input type="radio" name="correct_answer[4]" value="2">
                </div>
                <div class="option">
                    <input type="text" name="options[4][]" required placeholder="Option 4">
                    <input type="radio" name="correct_answer[4]" value="3">
                </div>
            </div>

            <button type="submit" class="submit-btn">Submit</button>
        </form>
    </div>

</body>
</html>
