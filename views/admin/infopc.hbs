<div class="assignment-container">
  <div class="header">
    <h2>Student PC Assignments</h2>
    <div class="session-info">
      <div class="info-item">
        <span class="label">Class:</span>
        <span class="value">{{loginDetails.className}}</span>
      </div>
      <div class="info-item">
        <span class="label">Lab:</span>
        <span class="value">{{loginDetails.labName}}</span>
      </div>
      <div class="info-item">
        <span class="label">Viva:</span>
        <span class="value">{{loginDetails.vivaname}}</span>
      </div>
      <div class="info-item">
        <span class="label">Duration:</span>
        <span class="value">{{loginDetails.duration}} minutes</span>
      </div>
      <div class="info-item">
        <span class="label">Login Time:</span>
        <span class="value">{{formattedDate}}</span>
      </div>
    </div>
  </div>

  <div class="table-responsive">
    <table class="assignment-table">
      <thead>
        <tr>
          <th>Roll No.</th>
          <th>Student Name</th>
          <th>Register No.</th>
          <th>PC Number</th>
          <th>PC IP Address</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        {{#each loginDetails.students}}
        <tr class="{{#if isAssigned}}assigned{{else}}waiting{{/if}}">
          <td>{{roll}}</td>
          <td>{{name}}</td>
          <td>{{register}}</td>
          <td>
            {{#if isAssigned}}
              {{pcNumber}}
            {{else}}
              <span class="not-assigned">Not Assigned</span>
            {{/if}}
          </td>
          <td>
            {{#if isAssigned}}
              {{pcIP}}
            {{else}}
              <span class="not-assigned">Not Assigned</span>
            {{/if}}
          </td>
          <td>
            {{#if isAssigned}}
              <span class="status active">Active</span>
            {{else}}
              <span class="status waiting">Waiting</span>
            {{/if}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div class="summary">
    <div class="summary-box">
      <h3>Summary</h3>
      <div class="summary-item">
        <span class="label">Total Students:</span>
        <span class="value">{{loginDetails.students.length}}</span>
      </div>
      <div class="summary-item">
        <span class="label">Students with PC:</span>
        <span class="value">{{assignedCount}}</span>
      </div>
      <div class="summary-item">
        <span class="label">Students waiting:</span>
        <span class="value">{{waitingCount}}</span>
      </div>
    </div>
  </div>

  <div class="actions">
    <button class="btn btn-print" onclick="window.print()">
      <i class="fas fa-print"></i> Print
    </button>
    <a href="/admin/home" class="btn btn-back">
      <i class="fas fa-arrow-left"></i> Back to Home
    </a>
  </div>
</div>

