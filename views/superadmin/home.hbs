

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Cards</title>
</head>
<body style="font-family: Arial, sans-serif; display: flex; flex-direction: column; align-items: center; gap: 20px; padding: 20px; background-color: #f4f4f4;">

    <button style="background: #007BFF; color: rgb(17, 227, 21); border: none; padding: 12px 20px; cursor: pointer; border-radius: 8px; font-size: 16px; font-weight: bold; transition: 0.3s;">
        <a href="/superadmin/addnewadmin" style="color: inherit; text-decoration: none;">ADD ADMIN</a>
    </button>

    <!-- Wrap all user cards inside one flex container -->
    <div style="display: flex; flex-wrap: wrap; gap: 20px; justify-content: center;">
        {{#each products}}
        <div style="width: 300px; border: 1px solid #ddd; padding: 20px; border-radius: 15px; box-shadow: 4px 4px 15px rgba(0,0,0,0.1); background: white; text-align: center;">
            <h3 style="margin: 0; color: #333;">Username: {{this.username}}</h3>
            <p style="margin: 10px 0; color: #555;">Password: {{this.password}}</p>
            <button style="background: #4CAF50; color: white; border: none; padding: 10px 15px; cursor: pointer; border-radius: 8px; transition: 0.3s;">Edit</button>
            <button style="background: #f44336; color: white; border: none; padding: 10px 15px; cursor: pointer; border-radius: 8px; margin-left: 8px; transition: 0.3s;">Delete</button>
        </div>
        {{/each}}
    </div>

</body>
</html>
