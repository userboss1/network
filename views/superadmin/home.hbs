<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <style>
        /* General Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }
        body {
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 40px 20px;
            color: white;
        }

        /* Buttons */
        .action-btn {
            background: #ffcc00;
            color: #222;
            border: none;
            padding: 12px 20px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            border-radius: 8px;
            transition: 0.3s;
            text-decoration: none;
            display: inline-block;
        }
        .action-btn:hover {
            background: #ffdb4d;
        }

        /* User Card Grid */
        .user-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            max-width: 1000px;
            margin-top: 20px;
        }

        /* User Card */
        .user-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            transition: 0.3s ease-in-out;
        }
        .user-card:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

        /* User Info */
        .user-card h3 {
            margin-bottom: 10px;
            font-size: 20px;
        }
        .user-card p {
            margin-bottom: 15px;
            font-size: 14px;
            color: #ddd;
        }

        /* Edit & Delete Buttons */
        .edit-btn, .delete-btn {
            border: none;
            padding: 10px 15px;
            cursor: pointer;
            border-radius: 8px;
            font-size: 14px;
            transition: 0.3s;
            text-transform: uppercase;
            font-weight: bold;
        }
        .edit-btn {
            background: #4CAF50;
            color: white;
        }
        .edit-btn:hover {
            background: #45a049;
        }
        .delete-btn {
            background: #e74c3c;
            color: white;
            margin-left: 8px;
        }
        .delete-btn:hover {
            background: #c0392b;
        }

        /* Admin Link */
        .admin-link {
            margin-top: 20px;
            font-size: 16px;
            font-weight: bold;
            text-decoration: none;
            color: #ffcc00;
            transition: 0.3s;
        }
        .admin-link:hover {
            color: #ffdb4d;
        }

    </style>
</head>
<body>

  <body>

    <div style="display: flex; gap: 15px;">
         <a href="/superadmin/edit" class="action-btn">‚ûï edit pc</a>
          <a href="/superadmin/pc" class="action-btn">‚ûï ADD pc</a>
        <a href="/superadmin/addStudent" class="action-btn">‚ûï ADD STUDENT</a>
        <a href="/superadmin/addnewadmin" class="action-btn">üë§ ADD ADMIN</a>
    </div>

    <div class="user-container">
        {{#each products}}
        <div class="user-card" data-id="{{this._id}}">
            <h3>üë§ Username: {{this.username}}</h3>
            <p>üîí Password: {{this.password}}</p>
            <button class="delete-btn" onclick="deleteUser('{{this._id}}')">üóëÔ∏è Delete</button>
        </div>
        {{/each}}
    </div>

</body>


<script>
    async function deleteUser(userId) {
        if (confirm("Are you sure you want to delete this user?")) {
            try {
                const response = await fetch(`/superadmin/delete/${userId}`, {
                    method: 'DELETE',
                });
                const result = await response.json();
                if (result.success) {
                    alert("User deleted successfully!");
                    location.reload();
                } else {
                    alert("Error deleting user!");
                }
            } catch (error) {
                console.error("Error:", error);
                alert("Server error. Try again.");
            }
        }
    }
</script>

</body>
</html>
